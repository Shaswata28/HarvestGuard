# .env.example
# Copy this file to .env and fill in your actual values

# Builder.io Configuration
VITE_PUBLIC_BUILDER_KEY=__BUILDER_PUBLIC_KEY__

# Server Configuration
PING_MESSAGE="ping pong"

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=HarvestGuard

# OpenWeatherMap API Configuration
# Get your free API key from: https://openweathermap.org/api
# Free tier: 1,000 calls/day
OPENWEATHER_API_KEY=your_api_key_here
WEATHER_CACHE_TTL=3600                    # Cache duration in seconds (1 hour)
WEATHER_CACHE_EXTENDED_TTL=7200           # Extended cache duration (2 hours)
WEATHER_API_DAILY_LIMIT=1000              # Free tier daily limit
WEATHER_API_WARNING_THRESHOLD=800         # Warning threshold (80% of limit)

# Google Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
